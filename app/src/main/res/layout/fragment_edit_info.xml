<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_between_views"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <TextView
                android:id="@+id/user_name_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="@dimen/space_between_views"
                android:paddingRight="25sp"
                android:text="@string/user_name" />

            <EditText
                android:id="@+id/user_name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_between_views_half"
                android:layout_marginRight="@dimen/space_between_views_half"
                android:layout_gravity="center"
                android:enabled="false"
                android:inputType="text" />

            <Button
                android:id="@+id/edit_button_name"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/space_between_views"
                android:layout_marginLeft="@dimen/space_between_views"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/pencil_xsmall"
                android:drawableLeft="@drawable/pencil_xsmall"
                android:text="@string/edit"
                android:textSize="@dimen/edit_button_info_text_size"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_surname_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingRight="6sp"
                android:paddingBottom="@dimen/space_between_views"
                android:text="@string/user_surname" />

            <EditText
                android:id="@+id/user_surname_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_between_views_half"
                android:layout_marginRight="@dimen/space_between_views_half"
                android:layout_gravity="center"
                android:enabled="false"
                android:inputType="text" />

            <Button
                android:id="@+id/edit_button_surname"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/space_between_views"
                android:layout_marginLeft="@dimen/space_between_views"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/pencil_xsmall"
                android:drawableLeft="@drawable/pencil_xsmall"
                android:text="@string/edit"
                android:textSize="@dimen/edit_button_info_text_size"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_nickname_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="@dimen/space_between_views"
                android:text="@string/user_nickname" />

            <EditText
                android:id="@+id/user_nickname_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_between_views_half"
                android:layout_marginRight="@dimen/space_between_views_half"
                android:layout_gravity="center"
                android:enabled="false"
                android:inputType="text" />

            <Button
                android:id="@+id/edit_button_nickname"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/space_between_views"
                android:layout_marginLeft="@dimen/space_between_views"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/pencil_xsmall"
                android:drawableLeft="@drawable/pencil_xsmall"
                android:text="@string/edit"
                android:textSize="@dimen/edit_button_info_text_size"
                android:textAllCaps="false" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_changes"
        android:enabled="false" />

</LinearLayout>